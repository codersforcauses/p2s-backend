{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "indent": ["error", 2],
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
